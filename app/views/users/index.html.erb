--><section id="col-central">

  <header id="titulo-central" >
    <h3>
      Usuarios
    </h3>                
  </header>
  
  <article>
    
    <ul>
      <% @users.each do |user| %>
        <li>
          <%= link_to user.email, user %>
          <% if current_user.admin? && !current_user?(user) %>
          | <%= link_to "delete", user, method: :delete, confirm: "Seguro?" %>
          <% end %>
        </li> 
      <% end %>
    </ul>
      
  </article>              

</section><!--  
